<h1><%= @list.name %></h1>
<div>
  <ul>
    <% @bookmarks.each do |bookmark| %>
      <li>
        <strong>Movie:</strong><%= bookmark.movie.title %><br>
        <strong>Comment:</strong><%= bookmark.comment %>
        <%= link_to "ðŸ—‘ï¸", bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Do you really want to delete this bookmark?"} %>
      </li>
