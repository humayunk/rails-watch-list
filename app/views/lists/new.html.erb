<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <div class="container-fluid">
    <%= link_to lists_path, class: "navbar-brand" do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <!-- Additional navbar content can go here -->
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="text-center mb-4">
    <h1 class="display-4 font-weight-bold">Create New List</h1>
    <p class="lead">Add a new list to your movie collection</p>
  </div>

  <%= simple_form_for @list, html: { class: 'form-horizontal' } do |f| %>
    <div class="form-group mb-3">
      <%= f.input :name, label: 'List Name', input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group mb-3">
      <%= f.input :photo, as: :file, label: 'Photo' %>
    </div>
    <div class="form-group">
      <%= f.button :submit, 'Create List', class: 'btn btn-primary btn-lg btn-block' %>
    </div>
  <% end %>
</div>
