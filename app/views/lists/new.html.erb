<h1>Create New List</h1>

<%= simple_form_for @list, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.input :name, label: 'List Name', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.button :submit, 'Create List', class: 'btn btn-primary' %>
  </div>
<% end %>
